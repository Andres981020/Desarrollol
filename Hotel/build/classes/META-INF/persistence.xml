<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="HospitalPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>modelo.Reserva</class>
    <class>modelo.Reservasalon</class>
    <class>modelo.Comodidad</class>
    <class>modelo.Producto</class>
    <class>modelo.Habitacioncomodidad</class>
    <class>modelo.Salon</class>
    <class>modelo.Reservahabitacion</class>
    <class>modelo.Saloncomodidad</class>
    <class>modelo.Habitacion</class>
    <class>modelo.Usuario</class>
    <class>modelo.Cliente</class>
    <class>modelo.Consumo</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/gestion?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
